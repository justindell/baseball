<div id='query'>
  <a href="/">All</a>
  <a href="/batters">Batters</a>
  <a href="/pitchers">Pitchers</a><br />
  <form action="<%= action %>" method="get" class="form-inline" role="form">
    <div class="form-group">
      Position: <input type="text" name="position" value="<%= params[:position] %>"/><br />
    </div>
    <div class="form-group">
      Limit: <input type="text" name="limit" value="<%= params[:limit] %>"/><br />
    </div>
    <div class="form-group">
      Hide Drafted: <input type="checkbox" name="hide-drafted" <%= "checked" if params['hide-drafted'] == 'on' %>/><br />
    </div>
    <div class="form-group">
      <input type="submit" value="Search" class="btn btn-primary"/>
    </div>
  </form>
</div>
